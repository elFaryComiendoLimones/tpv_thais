{% extends 'sidebar.html.twig' %}
{% block content %}

    {% if confirmed is defined and confirmed is not empty %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Producto editado!</strong> Tu producto se ha editado correctamente
        </div>
    {% endif %}

    <div class="card rounded">
        <div class="card-header card-header-rose card-header-icon d-flex align-items-center bg-white">
            <div class="card-icon w-25">
                <h4 class="card-title m-0 ml-2">Editar producto</h4>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form, {'action': path('edit-product'), 'method': 'POST'}) }}
            <div class="form-group">
                {{ form_label(form.bar_code) }}
                {{ form_widget(form.bar_code) }}
            </div>
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>

            <div class="form-group">
                {{ form_label(form.id_provider) }}
                {{ form_widget(form.id_provider) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <a class="btn btn-dark mt-2" href="{{ path('products') }}">Volver</a>
{% endblock %}