{% extends 'sidebar.html.twig' %}

{% block content %}
<h1>Lista de productos</h1>

    {% if confirmed is defined and confirmed is not empty %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Producto creado!</strong> Tu producto se ha insertado correctamente
        </div>
    {% endif %}

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Imagen</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Proveedor</th>
            <th scope="col">Precio</th>
            <th scope="col" colspan="2">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for p in products %}
            <tr>
                <th scope="row">
                    <div class="image-product">
                        {% if p.image is not empty %}
                            <img alt="imagen producto" src="{{ asset('uploads/img/product/' ~ p.image) }}">
                        {% else %}
                            <img alt="imagen producto" src="{{ asset('uploads/img/product/letter-p.png') }}">
                        {% endif %}
                    </div>
                </th>
                <td>{{ p.name }}</td>
                <td>{{ p.description }}</td>
                <td>{{ p.getIdProvider().getName() }}</td>
                <td>{{ p.price }}</td>
                <td colspan="2">
                    <a href="{{ path('edit-product', {'id' : p.id}) }}" class="btn btn-warning">Editar</a>
                    <a href="{{ path('delete-product', {'id' : p.id}) }}" class="btn btn-danger message-confirm" data-confirm="¿Estás seguro de borrar el producto?" data-confirmed="El producto se ha borrado correctamente!">
                        Eliminar
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('create-products') }}">Añadir Producto</a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/confirm.js') }}"></script>
{% endblock %}