{% extends 'sidebar.html.twig' %}

{% block content %}
<h1>Lista de Proveedores</h1>

    <a class="btn btn-dark mb-2" href="{{ path('create-provider') }}">Añadir Proveedor</a>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Email</th>
            <th scope="col">Localidad</th>
            <th scope="col">CP</th>
            <th scope="col">Dirección</th>
            <th scope="col" colspan="2">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for p in providers %}
            <tr>
                <th>{{ p.name }}</th>
                <td>{{ p.telefono }}</td>
                <td>{{ p.email }}</td>
                <td>{{ p.town }}</td>
                <td>{{ p.postcode }}</td>
                <td>{{ p.address }}</td>
                <td colspan="2">
                    <a href="{{ path('edit-provider', {'id' : p.id}) }}" class="btn btn-warning">Editar</a>
                    <a href="{{ path('delete-provider', {'id' : p.id}) }}" class="btn btn-danger message-confirm" data-confirm="¿Estás seguro de borrar el proveedor?" data-confirmed="El proveedor se ha borrado correctamente!">
                        Eliminar
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if pagination.range|length > 1 %}
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="{{ path('providers', {'page' : pagination.previous}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                {% for pag in pagination.range %}
                    {% if pagination.actual == pag %}
                        <li class="page-item active"><a class="page-link" href="{{ path('providers', {'page' : pag}) }}">{{ pag }}</a></li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{ path('providers', {'page' : pag}) }}">{{ pag }}</a></li>
                    {% endif %}
                {% endfor %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('providers', {'page' : pagination.next}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/confirm.js') }}"></script>
{% endblock %}