{% extends 'sidebar.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chartContainer">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                <div class="card rounded">
                    <div class="card-header card-header-rose card-header-icon d-flex align-items-center bg-white">
                        <div class="card-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h4 class="card-title m-0 ml-2">Total de ventas</h4>
                        <h5 class="m-0 ml-2">{{ totalSales }}</h5>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card rounded">
                    <div class="card-header card-header-rose card-header-icon d-flex align-items-center bg-white">
                        <div class="card-icon bg-green">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <h4 class="card-title m-0 ml-2">Total de Empleados</h4>
                        <h5 class="m-0 ml-2">{{ totalEmployees }}</h5>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card rounded">
                    <div class="card-header card-header-rose card-header-icon d-flex align-items-center bg-white">
                        <div class="card-icon bg-blue">
                            <i class="fas fa-users"></i>
                        </div>
                        <h4 class="card-title m-0 ml-2">Total de Clientes</h4>
                        <h5 class="m-0 ml-2">{{ totalClients }}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/js/canvasjs.min.js') }}"></script>
    <script type="text/javascript">
        var path_data_chart = '{{ path('data_chart') }}';
    </script>
    <script type="text/javascript" src="{{ asset('assets/js/dashboard.js') }}"></script>
{% endblock %}