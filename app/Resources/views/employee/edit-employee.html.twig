{% extends 'sidebar.html.twig' %}
{% block content %}
    <h1>Editar Empleado</h1>

    {% if confirmed is defined and confirmed is not empty %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Empleado!</strong> El empleado se ha editado correctamente
        </div>
    {% endif %}

    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="card border-secondary">
                            <div class="card-header">
                                <h3 class="mb-0 my-2">Datos Empleado</h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(form, {'action': path('edit-user'), 'method': 'POST'}) }}
                                <div class="form-group">
                                    {{ form_label(form.username) }}
                                    {{ form_widget(form.username) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.image) }}
                                    {{ form_widget(form.image) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.roles) }}
                                    {{ form_widget(form.roles) }}
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Actualizar
                                    </button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!--/row-->

            </div>
            <!--/col-->
        </div>
        <!--/row-->
    </div>
    <!--/container-->
    <a class="btn btn-dark" href="{{ path('products') }}">Volver</a>
{% endblock %}